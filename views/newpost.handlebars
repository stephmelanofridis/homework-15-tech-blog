<section class="card row g-3 align-items-center m-5">
    <div class="card-body d-flex flex-column p-4 w-10">
        <div>
            <h2 class="card-title text-center">Create a new blog post</h2>
            <form id="new-post-form" class="form blog-post-form">
        </div>
        <div class="mb-3">
            <label for="blog-title" class="form-label">
                <h3 class="m-2">Title</h3>
            </label>
            <input type="text" class="form-control" id="blog-title" placeholder="Blog Title">
        </div>

        <div class="mb-3">
            <label for="blog-content" class="form-label">
                <h3 class="m-2">Content</h3>
            </label>
            <textarea class="form-control" id="blog-content" rows="5" placeholder="Write something..."></textarea>
        </div>
        <div class="d-flex flex-row justify-content-center m-3">
            <button type="submit" class="btn btn-light w-50 new-post-btn">Publish</button>
        </div>
        </form>
    </div>
</section>

<script src="/js/newpost.js"></script>