<section class="card row g-3 align-items-center m-5">
    <div class="card-body d-flex flex-column p-4 w-10">
        <div>
            <h2 class="card-title text-center">Edit your post</h2>
            <form class="form edit-post-form" data-postid="{{post.id}}">
        </div>
        <div class="mb-3">
            <label for="blog-title" class="form-label">
                <h3 class="p-2">Title</h3>
            </label>
            <input type="text" class="form-control blog-title" value="{{post.title}}">
        </div>

        <div class="mb-3">
            <label for="blog-content" class="form-label">
                <h4 class="p-2">Content</h4>
            </label>
            <textarea class="form-control blog-content" rows="3">{{post.content}}</textarea>
        </div>
        <div class="d-flex flex-row justify-content-center m-2">
            <button type="submit" class="btn btn-light w-50 edit-post-btn">Publish Changes</button>
        </div>
        </form>
    </div>
</section>

<script src="/js/editpost.js"></script>